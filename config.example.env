# USC Racing Trackside Telemetry Configuration
# Copy this file to .env and modify as needed

# Server Configuration
TEL_HOST=0.0.0.0
TEL_PORT=8000
TEL_RELOAD=false
TEL_LOG_LEVEL=info

# CORS Configuration (comma-separated list, or * for all)
TEL_CORS_ORIGINS=*

# WebSocket Configuration
TEL_WS_UPDATE_RATE=10.0

# Data Logging Configuration
TEL_DATA_DIR=data
TEL_LOG_ENABLED=true
TEL_LOG_PREFIX=telemetry

# Telemetry Device Configuration
TEL_DEVICE_PORT=
TEL_DEVICE_BAUD=115200
TEL_DEVICE_UPDATE_RATE=10.0
TEL_API_URL=http://localhost:8000

# Optional: Telemetry Schema File (JSON)
# TEL_SCHEMA_FILE=config/telemetry_schema.json

# Aero Configuration
AERO_REF_DYNAMIC_PORT=7
AERO_REF_STATIC_PORT=8
AERO_NUM_PORTS=8
AERO_STRAIGHT_THRESHOLD=0.1
AERO_TURN_THRESHOLD=0.3
AERO_LATERAL_G_THRESHOLD=0.2
AERO_AVG_WINDOW_SIZE=100

# Histogram Configuration
AERO_HISTOGRAM_BINS=20
AERO_HISTOGRAM_RANGE=-3.0,3.0
AERO_HISTOGRAM_UPDATE_INTERVAL_MS=2000

# MoTeC Configuration
MOTEC_ENABLED=true
MOTEC_NAS_BASE_PATH=
MOTEC_LD_GLOB_PATTERN=*.ld
MOTEC_LDX_TEMPLATE_DIR=config/motec/templates
MOTEC_LDX_OUTPUT_DIR=data/motec/ldx
MOTEC_LD_SCAN_DIR=data/motec/ld
MOTEC_AUTO_GENERATE_LDX=false
MOTEC_OVERWRITE_POLICY=ifSafe
MOTEC_CHANNEL_MAPPINGS_FILE=config/motec/channel_mappings.json
MOTEC_CAR_PROFILES_FILE=config/motec/car_profiles.json
MOTEC_DEFAULT_SUBTEAM=MoTeC
MOTEC_LDX_EXTENSION=.ldx
MOTEC_LD_EXTENSION=.ld
MOTEC_LD_HEADER_SIZE=2048

# User Roles Configuration
ROLE_ADMIN=admin
ROLE_USER=user

# Default Admin Credentials
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin

# Queue Status Values
QUEUE_STATUS_PENDING=pending
QUEUE_STATUS_AUTO_APPLIED=auto-applied
QUEUE_STATUS_PROCESSED=processed
QUEUE_STATUS_REJECTED=rejected

# Default Subteams (comma-separated)
DEFAULT_SUBTEAMS=Aero,Engine,Suspension,Electronics,Chassis,Powertrain,Data Acquisition

# Car Identification Configuration
# Car ID patterns (comma-separated regex patterns)
CAR_ID_PATTERNS=car[_\s-]?(\\d+),vehicle[_\s-]?(\\d+),chassis[_\s-]?(\\d+),(\\d+)[_\s-]?car
# Car identifier fields in MoTeC Details section (comma-separated)
CAR_ID_DETAILS_FIELDS=Car,Car ID,Car Identifier,Vehicle,Vehicle ID,Chassis,Chassis Number,Car Number,Car Name

# NAS Discovery & Auto-Population
MOTEC_NAS_DISCOVERY_ENABLED=true
MOTEC_NAS_DISCOVERY_SCAN_ON_STARTUP=true
MOTEC_NAS_DISCOVERY_SCAN_INTERVAL_MS=30000
MOTEC_AUTO_POPULATE_ENABLED=true
MOTEC_AUTO_POPULATE_MAX_FILES_PER_SCAN=1000
MOTEC_AUTO_POPULATE_INFERENCE_MODE=conservative

